---
const SUPABASE_URL = import.meta.env.PUBLIC_SUPABASE_URL;
const SUPABASE_ANON_KEY = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;
---

<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Cozy Reading Corner</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap');

    :root {
      --bg-gradient-start: #c9e4de;
      --bg-gradient-end: #f7d7dc;
      --bg-primary: white;
      --text-primary: #5d7772;
      --text-secondary: #d4a5ae;
      --text-accent: #87a8a4;
      --card-bg: white;
      --card-shadow: rgba(0, 0, 0, 0.1);
    }

    [data-theme="dark"] {
      --bg-gradient-start: #1a2e2a;
      --bg-gradient-end: #2d1f24;
      --bg-primary: #1e1e1e;
      --text-primary: #b8d8d2;
      --text-secondary: #e8b4bc;
      --text-accent: #87a8a4;
      --card-bg: #2a2a2a;
      --card-shadow: rgba(0, 0, 0, 0.3);
    }
    
    * { 
      margin: 0; 
      padding: 0; 
      box-sizing: border-box; 
    }
    
    body {
      background: linear-gradient(135deg, var(--bg-gradient-start) 0%, var(--bg-gradient-end) 100%);
      font-family: 'Poppins', sans-serif;
      color: var(--text-primary);
      padding: 2rem;
      padding-bottom: 7rem;
      transition: background 0.3s ease, color 0.3s ease;
    }
    
    .container { 
      max-width: 1400px; 
      margin: 0 auto;
      width: 100%;
    }
    
    header {
      text-align: center;
      margin-bottom: 3rem;
      animation: fadeInDown 0.6s ease;
      max-width: 100%;
      width: 100%;
    }
    
    @keyframes fadeInDown {
      from { opacity: 0; transform: translateY(-20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    h1 {
      font-size: 3rem;
      font-weight: 700;
      background: linear-gradient(135deg, var(--text-accent) 0%, var(--text-secondary) 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 0.5rem;
      word-wrap: break-word;
    }

    h2 {
      margin-top: 2rem;
      margin-bottom: 1rem;
      color: var(--text-accent);
    }
    
    .subtitle {
      color: #5d7772;
      font-size: 1.2rem;
      font-weight: 600;
    }
    
    .books-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, 160px);
      gap: 1.5rem;
      animation: fadeIn 0.8s ease;
      width: 100%;
      justify-content: center;
    }
    
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    
    .book-card {
      background: white;
      border-radius: 20px;
      padding: 0;
      cursor: pointer;
      transition: all 0.3s ease;
      text-decoration: none;
      color: inherit;
      display: block;
      overflow: hidden;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      position: relative;
      width: 100%;
    }
    
    .book-card:hover {
      transform: translateY(-10px) scale(1.02);
      box-shadow: 0 20px 40px rgba(135, 168, 164, 0.3);
    }
    
    .book-cover {
      width: 100%;
      aspect-ratio: 2 / 3;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 3rem;
      position: relative;
      overflow: hidden;
    }
    
    .book-emoji {
      position: relative;
      z-index: 2;
    }
    
    .book-info {
      padding: 1rem;
      background: var(--card-bg);
    }
    
    .book-title {
			font-size: 1rem;
			font-weight: 700;
			margin-bottom: 0.3rem;
			line-height: 1.3;
			color: #5d7772 !important;
		}
    
    .book-author {
			color: #d4a5ae !important;
			font-size: 0.85rem;
			font-weight: 600;
			margin-bottom: 0.8rem;
		}
    
    .book-meta {
      display: flex;
      gap: 0.5rem;
      font-size: 0.75rem;
      color: #87a8a4;
      font-weight: 600;
    }
    
    .meta-item {
			display: flex;
			align-items: center;
			gap: 0.3rem;
			background: linear-gradient(135deg, #e8f5f3 0%, #fce9ed 100%);
			padding: 0.3rem 0.6rem;
			border-radius: 20px;
			color: #87a8a4 !important;
		}
    
    .empty-state, .loading-state {
      text-align: center;
      padding: 4rem 2rem;
      background: white;
      border-radius: 20px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      max-width: 600px;
      margin: 0 auto;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }
    
    .empty-state h2, .loading-state h2 {
      font-size: 1.8rem;
      margin: 0 0 1rem 0;
      color: var(--text-accent);
      width: 100%;
      text-align: center;
    }
    
    .empty-state p, .loading-state p {
      color: var(--text-secondary);
      font-size: 1.1rem;
      width: 100%;
      text-align: center;
      margin: 0;
    }

    .spinner {
      display: inline-block;
      width: 50px;
      height: 50px;
      border: 4px solid #e8f5f3;
      border-top-color: #87a8a4;
      border-radius: 50%;
      animation: spin 0.8s linear infinite;
      margin-bottom: 1rem;
    }
    
    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    .bottom-nav {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      background: var(--card-bg);
      display: flex;
      justify-content: space-around;
      padding: 1rem;
      box-shadow: 0 -5px 20px var(--card-shadow);
      z-index: 100;
      transition: background 0.3s ease, box-shadow 0.3s ease;
    }

    .nav-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-decoration: none;
      color: var(--text-accent);
      transition: all 0.3s ease;
      padding: 0.5rem 2rem;
      border-radius: 12px;
      border: none;
      background: none;
      cursor: pointer;
    }

    .nav-item:hover {
      background: rgba(135, 168, 164, 0.15);
    }

    .nav-item.active {
      background: rgba(135, 168, 164, 0.3);
      color: var(--text-accent);
    }

    .nav-icon {
      font-size: 1.5rem;
      margin-bottom: 0.25rem;
    }

    .nav-label {
      font-size: 0.85rem;
      font-weight: 600;
      color: var(--text-accent);
    }

    @media (max-width: 768px) {
      body { 
        padding: 1rem; 
        padding-bottom: 7rem; 
      }
      h1 { 
        font-size: 2.2rem; 
      }
      .books-grid {
        grid-template-columns: repeat(auto-fill, 120px);
        gap: 1rem;
      }
      .book-cover {
        font-size: 2rem;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <header>
      <h1>My Cozy Reading Corner</h1>
      <p class="subtitle" id="bookCount">Loading your collection...</p>
    </header>

    <div id="booksContainer">
      <div class="loading-state">
        <div class="spinner"></div>
        <p>Loading your books...</p>
      </div>
    </div>
  </div>

  <!-- Bottom Navigation -->
  <nav class="bottom-nav">
    <a href="/" class="nav-item active">
      <span class="nav-icon">üìö</span>
      <span class="nav-label">Library</span>
    </a>
    <button onclick="toggleDarkMode()" class="nav-item" style="border: none; background: none;">
      <span class="nav-icon" id="themeIcon">üåô</span>
      <span class="nav-label">Theme</span>
    </button>
    <a href="/admin" class="nav-item">
      <span class="nav-icon">‚úèÔ∏è</span>
      <span class="nav-label">Add Books</span>
    </a>
  </nav>

  <script>
    // Dark mode toggle - defined first so onclick can find it
    function toggleDarkMode() {
      const html = document.documentElement;
      const currentTheme = html.getAttribute('data-theme');
      const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
      const icon = document.getElementById('themeIcon');
      
      html.setAttribute('data-theme', newTheme);
      localStorage.setItem('theme', newTheme);
      icon.textContent = newTheme === 'dark' ? '‚òÄÔ∏è' : 'üåô';
    }

    // Make it globally accessible
    window.toggleDarkMode = toggleDarkMode;

    // Load saved theme on page load
    (function() {
      const savedTheme = localStorage.getItem('theme') || 'light';
      const icon = document.getElementById('themeIcon');
      document.documentElement.setAttribute('data-theme', savedTheme);
      if (icon) {
        icon.textContent = savedTheme === 'dark' ? '‚òÄÔ∏è' : 'üåô';
      }
    })();
  </script>

  <script type="module" define:vars={{ SUPABASE_URL, SUPABASE_ANON_KEY }}>
    import { createClient } from 'https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2/+esm';
  
    const supabase = createClient(SUPABASE_URL, SUPABASE_ANON_KEY);

    const gradients = [
      'linear-gradient(135deg, #c9e4de 0%, #f7d7dc 100%)',
      'linear-gradient(135deg, #b8d8d2 0%, #f4c2cd 100%)',
      'linear-gradient(135deg, #a8cfc7 0%, #f0adb8 100%)',
      'linear-gradient(135deg, #d4ebe6 0%, #fbe3e8 100%)',
      'linear-gradient(135deg, #9fc5bd 0%, #ecaab6 100%)',
      'linear-gradient(135deg, #c2dfd8 0%, #f6d0da 100%)',
      'linear-gradient(135deg, #b3d4cc 0%, #f2bdc9 100%)',
      'linear-gradient(135deg, #dceee9 0%, #fce7ed 100%)',
    ];

    const bookEmojis = ['üìñ', 'üìö', 'üíï', 'üå∏', 'ü¶ã', 'üå∑', 'üéÄ', 'üíù', 'üå∫', 'üß∏'];

    async function loadBooks() {
      try {
        const { data: books, error } = await supabase
          .from('books')
          .select(`
            *,
            chapters(id, chapter_number)
          `)
          .order('created_at', { ascending: false });

        if (error) throw error;

        const container = document.getElementById('booksContainer');
        const countEl = document.getElementById('bookCount');

        if (!books || books.length === 0) {
          container.innerHTML = `
            <div class="empty-state">
              <h2>üå∏ No books yet!</h2>
              <p>Start building your collection by adding your first book!</p>
            </div>
          `;
          countEl.textContent = '0 books in your collection';
          return;
        }

        countEl.textContent = `${books.length} lovely ${books.length === 1 ? 'book' : 'books'} in your collection`;

        container.innerHTML = `
  				<div class="books-grid" style="display: grid; grid-template-columns: repeat(auto-fill, 160px); gap: 1.5rem; width: 100%; justify-content: center;">
            ${books.map((book, index) => {
              const chapterCount = book.chapters?.length || 0;
              const gradient = gradients[index % gradients.length];
              const emoji = bookEmojis[index % bookEmojis.length];
              
              return `
                <a href="/reader?book=${book.id}" class="book-card">
                  <div class="book-cover" style="${book.cover_image_url ? 'padding: 0; background: #f0f0f0;' : gradient}">
                    ${book.cover_image_url 
                      ? `<img src="${book.cover_image_url}" alt="${book.title}" style="width: 100%; height: 100%; object-fit: cover; display: block;">` 
                      : `<span class="book-emoji">${emoji}</span>`
                    }
                  </div>
                  <div class="book-info">
                    <div class="book-title">${book.title}</div>
                    <div class="book-author">by ${book.author}</div>
                    <div class="book-meta">
                      <div class="meta-item">
                        <span>üìÑ</span>
                        <span>${chapterCount} ${chapterCount === 1 ? 'chapter' : 'chapters'}</span>
                      </div>
                    </div>
                  </div>
                </a>
              `;
            }).join('')}
          </div>
        `;

      } catch (err) {
        console.error('Error loading books:', err);
        document.getElementById('booksContainer').innerHTML = `
          <div class="empty-state">
            <h2>üíî Oops!</h2>
            <p style="color: #e74c3c;">Error loading books: ${err.message}</p>
          </div>
        `;
      }
    }

    loadBooks();
  </script>
</body>
</html>
