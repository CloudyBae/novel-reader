---
const SUPABASE_URL = import.meta.env.PUBLIC_SUPABASE_URL;
const SUPABASE_ANON_KEY = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;
---

<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Novel Admin</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap');

    :root {
      --bg-gradient-start: #c9e4de;
      --bg-gradient-end: #f7d7dc;
      --bg-primary: white;
      --text-primary: #5d7772;
      --text-secondary: #d4a5ae;
      --text-accent: #87a8a4;
      --card-bg: white;
      --card-shadow: rgba(0, 0, 0, 0.1);
    }

    [data-theme="dark"] {
      --bg-gradient-start: #1a2e2a;
      --bg-gradient-end: #2d1f24;
      --bg-primary: #1e1e1e;
      --text-primary: #b8d8d2;
      --text-secondary: #e8b4bc;
      --text-accent: #87a8a4;
      --card-bg: #2a2a2a;
      --card-shadow: rgba(0, 0, 0, 0.3);
    }
    
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      background: linear-gradient(135deg, var(--bg-gradient-start) 0%, var(--bg-gradient-end) 100%);
      font-family: 'Poppins', sans-serif;
      color: var(--text-primary);
      padding: 2rem;
      padding-bottom: 7rem;
      transition: background 0.3s ease, color 0.3s ease;
    }
    .container { max-width: 800px; margin: 0 auto; }
    
    h1 { 
      margin-bottom: 2rem; 
      color: var(--text-accent);
      text-align: center;
    }
    
    h2 {
      margin-top: 2rem;
      margin-bottom: 1rem;
      color: var(--text-accent);
    }
    
    .back-link {
      display: inline-block;
      margin-bottom: 2rem;
      color: var(--text-accent);
      text-decoration: none;
      font-weight: 600;
    }
    
    .back-link:hover { text-decoration: underline; }
    
    .form-group { margin-bottom: 1.5rem; }
    
    label {
      display: block;
      margin-bottom: 0.5rem;
      color: var(--text-primary);
      font-weight: 600;
    }
    
    input, textarea, select {
      width: 100%;
      padding: 0.75rem;
      background: var(--card-bg);
      border: 2px solid var(--text-accent);
      border-radius: 12px;
      color: var(--text-primary);
      font-family: inherit;
      font-size: 1rem;
    }
    
    input[type="file"] {
      padding: 0.5rem;
    }
    
    textarea {
      min-height: 200px;
      resize: vertical;
      line-height: 1.6;
    }
    
    input:focus, textarea:focus, select:focus {
      outline: none;
      border-color: #87a8a4;
    }
    
    button {
      background: linear-gradient(135deg, #87a8a4 0%, #e8b4bc 100%);
      color: white;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 12px;
      cursor: pointer;
      font-size: 1rem;
      font-weight: 600;
      transition: all 0.3s ease;
    }
    
    button:hover { 
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(135, 168, 164, 0.3);
    }
    
    button:disabled {
      background: #d4ebe6;
      cursor: not-allowed;
      transform: none;
    }
    
    .section {
      background: var(--card-bg);
      padding: 2rem;
      border-radius: 20px;
      margin-bottom: 2rem;
      box-shadow: 0 10px 30px var(--card-shadow);
      transition: background 0.3s ease;
    }
    
    .message {
      padding: 1rem;
      border-radius: 12px;
      margin-bottom: 1rem;
      display: none;
    }
    
    .message.success {
      background: #e8f5f3;
      color: #87a8a4;
    }
    
    .message.error {
      background: #fce9ed;
      color: #d4a5ae;
    }
    
    .message.show { display: block; }

    .books-list { margin-top: 1rem; }
    
    .book-item {
      background: linear-gradient(135deg, #e8f5f3 0%, #fce9ed 100%);
      padding: 1rem;
      margin-bottom: 0.5rem;
      border-radius: 12px;
      cursor: pointer;
      display: flex;
      gap: 1rem;
      align-items: center;
    }
    
    .book-item:hover { opacity: 0.8; }
    
    .book-item-cover {
      width: 60px;
      height: 80px;
      border-radius: 8px;
      object-fit: cover;
      background: #d4ebe6;
    }
    
    .book-item-info {
      flex: 1;
    }
    
    .book-item .title { 
      font-weight: 600; 
      color: var(--text-primary); 
    }

    .book-item .meta { 
      color: var(--text-accent); 
      font-size: 0.9rem; 
      margin-top: 0.25rem; 
    }

    .image-preview {
      margin-top: 1rem;
      display: none;
    }

    .image-preview img {
      max-width: 200px;
      border-radius: 12px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .image-preview.show {
      display: block;
    }

    .bottom-nav {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      background: var(--card-bg);
      display: flex;
      justify-content: space-around;
      padding: 1rem;
      box-shadow: 0 -5px 20px var(--card-shadow);
      z-index: 100;
      transition: background 0.3s ease;
    }

    .nav-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-decoration: none;
      color: var(--text-accent);
      transition: all 0.3s ease;
      padding: 0.5rem 2rem;
      border-radius: 12px;
    }

    .nav-item:hover {
      background: linear-gradient(135deg, #e8f5f3 0%, #fce9ed 100%);
    }

    .nav-item.active {
      background: linear-gradient(135deg, #87a8a4 0%, #e8b4bc 100%);
      color: white;
    }

    .nav-icon {
      font-size: 1.5rem;
      margin-bottom: 0.25rem;
    }

    .nav-label {
      font-size: 0.85rem;
      font-weight: 600;
    }
  </style>
</head>
<body>
  <div class="container">
    <a href="/" class="back-link">‚Üê Back to Library</a>
    <h1>üìö Novel Admin Panel</h1>
    
    <div id="bookMessage" class="message"></div>
    <div id="chapterMessage" class="message"></div>

    <!-- Add New Book -->
    <div class="section">
      <h2>Add New Book</h2>
      <form id="bookForm">
        <div class="form-group">
          <label for="bookTitle">Title</label>
          <input type="text" id="bookTitle" required placeholder="Shadow Slave">
        </div>
        <div class="form-group">
          <label for="bookAuthor">Author</label>
          <input type="text" id="bookAuthor" required placeholder="Guiltythree">
        </div>
        <div class="form-group">
          <label for="bookCover">Book Cover (Optional)</label>
          <input type="file" id="bookCover" accept="image/*">
          <div id="imagePreview" class="image-preview">
            <img id="previewImg" src="" alt="Preview">
          </div>
        </div>
        <button type="submit">Create Book</button>
      </form>
    </div>

    <!-- Add Chapter to Existing Book -->
    <div class="section">
      <h2>Add Chapter to Book</h2>
      
      <div class="form-group">
        <label>Select Book</label>
        <select id="selectBook">
          <option value="">-- Select a book --</option>
        </select>
        <button id="refreshBooksBtn" type="button">
          Refresh Books
        </button>
      </div>

      <form id="chapterForm">
        <div class="form-group">
          <label for="chapterNumber">Chapter Number</label>
          <input type="number" id="chapterNumber" required placeholder="1" min="1">
        </div>
        <div class="form-group">
          <label for="chapterTitle">Chapter Title</label>
          <input type="text" id="chapterTitle" required placeholder="The Beginning">
        </div>
        <div class="form-group">
          <label for="chapterContent">Chapter Content</label>
          <textarea id="chapterContent" required placeholder="Enter the full chapter text here..."></textarea>
        </div>
        <button type="submit">Add Chapter</button>
      </form>
    </div>

    <!-- View Books -->
    <div class="section">
      <h2>Your Books</h2>
      <div id="booksList" class="books-list">
        <p style="color: #87a8a4;">Loading books...</p>
      </div>
    </div>
  </div>

  <!-- Bottom Navigation -->
  <nav class="bottom-nav">
    <a href="/" class="nav-item active">
      <span class="nav-icon">üìö</span>
      <span class="nav-label">Library</span>
    </a>
    <button onclick="toggleDarkMode()" class="nav-item" style="border: none; background: none;">
      <span class="nav-icon" id="themeIcon">üåô</span>
      <span class="nav-label">Theme</span>
    </button>
    <a href="/admin" class="nav-item">
      <span class="nav-icon">‚úèÔ∏è</span>
      <span class="nav-label">Add Books</span>
    </a>
  </nav>

  <script>
    // Dark mode toggle - defined first so onclick can find it
    function toggleDarkMode() {
      const html = document.documentElement;
      const currentTheme = html.getAttribute('data-theme');
      const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
      const icon = document.getElementById('themeIcon');
      
      html.setAttribute('data-theme', newTheme);
      localStorage.setItem('theme', newTheme);
      icon.textContent = newTheme === 'dark' ? '‚òÄÔ∏è' : 'üåô';
    }

    // Make it globally accessible
    window.toggleDarkMode = toggleDarkMode;

    // Load saved theme on page load
    (function() {
      const savedTheme = localStorage.getItem('theme') || 'light';
      const icon = document.getElementById('themeIcon');
      document.documentElement.setAttribute('data-theme', savedTheme);
      if (icon) {
        icon.textContent = savedTheme === 'dark' ? '‚òÄÔ∏è' : 'üåô';
      }
    })();
  </script>

  <script type="module" define:vars={{ SUPABASE_URL, SUPABASE_ANON_KEY }}>
    import { createClient } from 'https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2/+esm';
  
    const supabase = createClient(SUPABASE_URL, SUPABASE_ANON_KEY);
    
    let books = [];

    // Image preview
    document.getElementById('bookCover').addEventListener('change', (e) => {
      const file = e.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = (e) => {
          document.getElementById('previewImg').src = e.target.result;
          document.getElementById('imagePreview').classList.add('show');
        };
        reader.readAsDataURL(file);
      } else {
        document.getElementById('imagePreview').classList.remove('show');
      }
    });

    window.addEventListener('DOMContentLoaded', () => {
      refreshBooks();
      document
        .getElementById('refreshBooksBtn')
        .addEventListener('click', refreshBooks);
    });


    document.getElementById('bookForm').addEventListener('submit', async (e) => {
      e.preventDefault();

      console.log('Form submitted!');
      console.log('SUPABASE_URL:', SUPABASE_URL);
      console.log('SUPABASE_ANON_KEY:', SUPABASE_ANON_KEY ? 'Present' : 'Missing');
      
      const title = document.getElementById('bookTitle').value.trim();
      const author = document.getElementById('bookAuthor').value.trim();
      const coverFile = document.getElementById('bookCover').files[0];

      console.log('Book data:', { title, author, hasCover: !!coverFile });

      try {
        let coverImageUrl = null;

        // Upload image if provided
        if (coverFile) {
          const fileExt = coverFile.name.split('.').pop();
          const fileName = `${Date.now()}-${Math.random().toString(36).substring(7)}.${fileExt}`;
          
          const { data: uploadData, error: uploadError } = await supabase.storage
            .from('book-covers')
            .upload(fileName, coverFile);

          if (uploadError) throw uploadError;

        // Get public URL
        const { data } = supabase.storage
          .from('book-covers')
          .getPublicUrl(fileName);

        coverImageUrl = data.publicUrl;
        console.log('Cover image URL:', coverImageUrl); // Debug log
      }
        // Create book
        console.log('Creating book in database...');
        const { data, error } = await supabase
          .from('books')
          .insert([{
            title,
            author,
            cover_image_url: coverImageUrl
          }])
          .select();

        console.log('Insert result:', { data, error });
        if (error) throw error;

        showMessage('bookMessage', `Book "${title}" created successfully!`, 'success');
        document.getElementById('bookForm').reset();
        document.getElementById('imagePreview').classList.remove('show');
        refreshBooks();
      } catch (err) {
        console.error('Error caught:', err);
        showMessage('bookMessage', `Error: ${err.message}`, 'error');
      }
    });

    document.getElementById('chapterForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const bookId = document.getElementById('selectBook').value;
      if (!bookId) {
        showMessage('chapterMessage', 'Please select a book first', 'error');
        return;
      }

      const chapterData = {
        book_id: bookId,
        chapter_number: parseInt(document.getElementById('chapterNumber').value),
        title: document.getElementById('chapterTitle').value.trim(),
        content: document.getElementById('chapterContent').value.trim()
      };

      try {
        const { data, error } = await supabase
          .from('chapters')
          .insert([chapterData])
          .select();

        if (error) throw error;

        showMessage('chapterMessage', 'Chapter added successfully!', 'success');
        document.getElementById('chapterForm').reset();
        refreshBooks();
      } catch (err) {
        showMessage('chapterMessage', `Error: ${err.message}`, 'error');
      }
    });

    async function refreshBooks() {
      try {
        const { data: booksData, error: booksError } = await supabase
          .from('books')
          .select(`
            *,
            chapters:chapters(count)
          `)
          .order('created_at', { ascending: false });

        console.log('Books loaded:', booksData); // ADD THIS
        console.log('Error:', booksError); // ADD THIS

        if (booksError) throw booksError;
        
        books = booksData;
        
        const select = document.getElementById('selectBook');
        console.log('Select element:', select); // ADD THIS
        console.log('Number of books:', books.length); // ADD THIS
        
        select.innerHTML = '<option value="">-- Select a book --</option>';
        books.forEach(book => {
          const opt = document.createElement('option');
          opt.value = book.id;
          opt.textContent = book.title;
          select.appendChild(opt);
          console.log('Added book option:', book.title); // ADD THIS
        });

        const list = document.getElementById('booksList');
        if (books.length === 0) {
          list.innerHTML = '<p style="color: #87a8a4;">No books yet. Create one above!</p>';
        } else {
          list.innerHTML = books.map(book => {
            const chapterCount = book.chapters?.[0]?.count || 0;
            const coverImg = book.cover_image_url 
              ? `<img src="${book.cover_image_url}" class="book-item-cover" alt="${book.title}">`
              : `<div class="book-item-cover" style="display: flex; align-items: center; justify-content: center; font-size: 2rem;">üìñ</div>`;
            
            return `
              <div class="book-item">
                ${coverImg}
                <div class="book-item-info">
                  <div class="title">${book.title}</div>
                  <div class="meta">${book.author} ‚Ä¢ ${chapterCount} chapters</div>
                </div>
              </div>
            `;
          }).join('');
        }
      } catch (err) {
        console.error('Error:', err);
        document.getElementById('booksList').innerHTML = 
          `<p style="color: #d4a5ae;">Error loading books: ${err.message}</p>`;
      }
    }

    function showMessage(id, text, type) {
      const msg = document.getElementById(id);
      msg.textContent = text;
      msg.className = `message ${type} show`;
      setTimeout(() => msg.classList.remove('show'), 5000);
    }
  </script>
</body>
</html>
