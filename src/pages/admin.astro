---
// This page is client-side only for form handling
---

<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Novel Admin</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap');
    
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      background: linear-gradient(135deg, #c9e4de 0%, #f7d7dc 100%);
      font-family: 'Poppins', sans-serif;
      color: #5d7772;
      padding: 2rem;
    }
    .container { max-width: 800px; margin: 0 auto; }
    
    h1 { 
      margin-bottom: 2rem; 
      color: #87a8a4;
      text-align: center;
    }
    
    h2 {
      margin-top: 2rem;
      margin-bottom: 1rem;
      color: #87a8a4;
    }
    
    .back-link {
      display: inline-block;
      margin-bottom: 2rem;
      color: #87a8a4;
      text-decoration: none;
      font-weight: 600;
    }
    
    .back-link:hover { text-decoration: underline; }
    
    .form-group { margin-bottom: 1.5rem; }
    
    label {
      display: block;
      margin-bottom: 0.5rem;
      color: #5d7772;
      font-weight: 600;
    }
    
    input, textarea, select {
      width: 100%;
      padding: 0.75rem;
      background: white;
      border: 2px solid #d4ebe6;
      border-radius: 12px;
      color: #5d7772;
      font-family: inherit;
      font-size: 1rem;
    }
    
    textarea {
      min-height: 200px;
      resize: vertical;
      line-height: 1.6;
    }
    
    input:focus, textarea:focus, select:focus {
      outline: none;
      border-color: #87a8a4;
    }
    
    button {
      background: linear-gradient(135deg, #87a8a4 0%, #e8b4bc 100%);
      color: white;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 12px;
      cursor: pointer;
      font-size: 1rem;
      font-weight: 600;
      transition: all 0.3s ease;
    }
    
    button:hover { 
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(135, 168, 164, 0.3);
    }
    
    button:disabled {
      background: #d4ebe6;
      cursor: not-allowed;
      transform: none;
    }
    
    .section {
      background: white;
      padding: 2rem;
      border-radius: 20px;
      margin-bottom: 2rem;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }
    
    .message {
      padding: 1rem;
      border-radius: 12px;
      margin-bottom: 1rem;
      display: none;
    }
    
    .message.success {
      background: #e8f5f3;
      color: #87a8a4;
    }
    
    .message.error {
      background: #fce9ed;
      color: #d4a5ae;
    }
    
    .message.show { display: block; }

    .books-list { margin-top: 1rem; }
    
    .book-item {
      background: linear-gradient(135deg, #e8f5f3 0%, #fce9ed 100%);
      padding: 1rem;
      margin-bottom: 0.5rem;
      border-radius: 12px;
      cursor: pointer;
    }
    
    .book-item:hover { opacity: 0.8; }
    .book-item .title { font-weight: 600; color: #5d7772; }
    .book-item .meta { color: #87a8a4; font-size: 0.9rem; margin-top: 0.25rem; }
  </style>
</head>
<body>
  <div class="container">
    <a href="/" class="back-link">‚Üê Back to Library</a>
    <h1>üìö Novel Admin Panel</h1>
    
    <div id="bookMessage" class="message"></div>
    <div id="chapterMessage" class="message"></div>

    <!-- Add New Book -->
    <div class="section">
      <h2>Add New Book</h2>
      <form id="bookForm">
        <div class="form-group">
          <label for="bookTitle">Title</label>
          <input type="text" id="bookTitle" required placeholder="Shadow Slave">
        </div>
        <div class="form-group">
          <label for="bookAuthor">Author</label>
          <input type="text" id="bookAuthor" required placeholder="Guiltythree">
        </div>
        <button type="submit">Create Book</button>
      </form>
    </div>

    <!-- Add Chapter to Existing Book -->
    <div class="section">
      <h2>Add Chapter to Book</h2>
      
      <div class="form-group">
        <label>Select Book</label>
        <select id="selectBook">
          <option value="">-- Select a book --</option>
        </select>
        <button onclick="refreshBooks()" style="margin-top: 0.5rem; padding: 0.5rem 1rem;">Refresh Books</button>
      </div>

      <form id="chapterForm">
        <div class="form-group">
          <label for="chapterNumber">Chapter Number</label>
          <input type="number" id="chapterNumber" required placeholder="1" min="1">
        </div>
        <div class="form-group">
          <label for="chapterTitle">Chapter Title</label>
          <input type="text" id="chapterTitle" required placeholder="The Beginning">
        </div>
        <div class="form-group">
          <label for="chapterContent">Chapter Content</label>
          <textarea id="chapterContent" required placeholder="Enter the full chapter text here..."></textarea>
        </div>
        <button type="submit">Add Chapter</button>
      </form>
    </div>

    <!-- View Books -->
    <div class="section">
      <h2>Your Books</h2>
      <div id="booksList" class="books-list">
        <p style="color: #87a8a4;">Loading books...</p>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
  <script>
    const SUPABASE_URL = import.meta.env.PUBLIC_SUPABASE_URL;
    const SUPABASE_ANON_KEY = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;
    
    const supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_ANON_KEY);
    
    let books = [];

    window.addEventListener('DOMContentLoaded', refreshBooks);

    document.getElementById('bookForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const bookData = {
        title: document.getElementById('bookTitle').value.trim(),
        author: document.getElementById('bookAuthor').value.trim()
      };

      try {
        const { data, error } = await supabase
          .from('books')
          .insert([bookData])
          .select();

        if (error) throw error;

        showMessage('bookMessage', `Book "${bookData.title}" created successfully!`, 'success');
        document.getElementById('bookForm').reset();
        refreshBooks();
      } catch (err) {
        showMessage('bookMessage', `Error: ${err.message}`, 'error');
      }
    });

    document.getElementById('chapterForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const bookId = document.getElementById('selectBook').value;
      if (!bookId) {
        showMessage('chapterMessage', 'Please select a book first', 'error');
        return;
      }

      const chapterData = {
        book_id: bookId,
        chapter_number: parseInt(document.getElementById('chapterNumber').value),
        title: document.getElementById('chapterTitle').value.trim(),
        content: document.getElementById('chapterContent').value.trim()
      };

      try {
        const { data, error } = await supabase
          .from('chapters')
          .insert([chapterData])
          .select();

        if (error) throw error;

        showMessage('chapterMessage', 'Chapter added successfully!', 'success');
        document.getElementById('chapterForm').reset();
        refreshBooks();
      } catch (err) {
        showMessage('chapterMessage', `Error: ${err.message}`, 'error');
      }
    });

    async function refreshBooks() {
      try {
        const { data: booksData, error: booksError } = await supabase
          .from('books')
          .select(`
            *,
            chapters:chapters(count)
          `)
          .order('created_at', { ascending: false });

        if (booksError) throw booksError;
        
        books = booksData;
        
        const select = document.getElementById('selectBook');
        select.innerHTML = '<option value="">-- Select a book --</option>';
        books.forEach(book => {
          const opt = document.createElement('option');
          opt.value = book.id;
          opt.textContent = book.title;
          select.appendChild(opt);
        });

        const list = document.getElementById('booksList');
        if (books.length === 0) {
          list.innerHTML = '<p style="color: #87a8a4;">No books yet. Create one above!</p>';
        } else {
          list.innerHTML = books.map(book => {
            const chapterCount = book.chapters?.[0]?.count || 0;
            return `
              <div class="book-item">
                <div class="title">${book.title}</div>
                <div class="meta">${book.author} ‚Ä¢ ${chapterCount} chapters</div>
              </div>
            `;
          }).join('');
        }
      } catch (err) {
        console.error('Error:', err);
        document.getElementById('booksList').innerHTML = 
          `<p style="color: #d4a5ae;">Error loading books: ${err.message}</p>`;
      }
    }

    function showMessage(id, text, type) {
      const msg = document.getElementById(id);
      msg.textContent = text;
      msg.className = `message ${type} show`;
      setTimeout(() => msg.classList.remove('show'), 5000);
    }
  </script>
</body>
</html>
